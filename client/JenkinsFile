pipeline {
  agent any
  tools { nodejs 'node20' }

  environment {
    CI = 'true'
    NODE_ENV = 'production'
    VITE_URL = 'http://localhost:3000'
  }

  stages {
    stage('Checkout'){ steps { checkout scm } }

    stage('Build frontend') {
      steps {
        dir('client') {
          sh 'node -v && npm -v'
          sh 'npm ci'
          sh 'npm run build'
        }
      }
    }

    stage('Artefactos') {
      steps {
        archiveArtifacts artifacts: 'client/dist/**', fingerprint: true
      }
    }
  }
}
